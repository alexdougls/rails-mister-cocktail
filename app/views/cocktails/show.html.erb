<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1586&q=80);">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="container text-center">
  <h4 class="mt-4">Ingredients</h4>
    <div class="dose-container w-50 d-flex flex-column">
      <% @cocktail.doses.each do |dose| %>
        <div class="card-product ">
          <img src="https://images.unsplash.com/photo-1563630440878-c25af103219a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2734&q=80" />
          <div class="card-product-infos d-flex  align-items-center">
            <h2><%= dose.description %> <%= dose.ingredient.name %></h2>
            <span><%= link_to dose_path(dose),
                    method: :delete,
                    data: { confirm: "Are you sure?" } do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
            </span>
          </div>
        </div>
      <% end %>
    </div>


  <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-ghost mb-3" %>
</div>
